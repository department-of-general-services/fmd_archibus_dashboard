<view version="2.0">
	<!-- <title>Work Request Metrics</title> -->

	<dataSource id="ds_wrhwr_metrics">
		<sql dialect="sqlserver">
			SELECT 'Opened in Last 30 Days' AS label, COUNT(*) as count_wr
			FROM wrhwr
			WHERE prob_type IS NOT NULL
				AND prob_type != 'TEST(DO NOT USE)'
				AND date_requested &gt;= DateAdd(day, -30, getDate())
				AND date_requested &lt; getDate()
			UNION
			SELECT 'Closed in Last 30 Days' AS label, COUNT(*) as count_wr
			FROM wrhwr
			WHERE prob_type IS NOT NULL
				AND prob_type != 'TEST(DO NOT USE)'
				AND status = 'Clo'
				AND date_closed &gt;= DateAdd(day, -30, getDate())
				AND date_closed &lt; getDate()
		</sql>
		<table name="wrhwr"
			role="main" />
		<field name="label"
			dataType="text" />
		<field name="count_wr"
			dataType="number"
			decimals="0" />
	</dataSource>

	<panel id="metrics_grid"
		type="grid"
		controlType="reportGrid"
		dataSource="ds_wrhwr_metrics">
		<title>Workflow Over Last 30 Days</title>

		<field name="label">
			<title>Metric</title>
		</field>
		<field name="count_wr">
			<title>Count</title>
		</field>
	</panel>
</view>